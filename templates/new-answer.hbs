<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Answer</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
          <label for="name">Name</label>
          {{input id="name" class="form-control" value=name}}
          </div>
          <div class="form-group">
          <label for="body">Answer</label>
          {{textarea id="body" class="form-control" rows="6" value=body}}
          </div>
          <button type="submit" class="btn btn-success" {{action 'save'}}>Add Answer</button>
        </form>
      </div>
    </div>
  </div>
</div>
